<div class="m-auto mt-4" style="max-width: 360px">
  <h2 class="text-2xl text-center font-avenir-next-bold">
    <%= t(".title") %></h2>
  </h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field mt-8">
      <%= form.submit class: "uppercase bg-blue-500 text-white text-xs py-3 px-6 w-full tracking-widest rounded" %>
    </div>

    <div class="flex justify-between mt-4">
      <%= link_to t(".sign_in"), sign_in_path, class: "hover:text-blue-500" %>
      <%= link_to t(".forgot_password"), new_password_path, class: "hover:text-blue-500" %>
    </div>
  <% end %>
</div>
