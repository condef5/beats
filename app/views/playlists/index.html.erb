<div class="flex justify-between items-center">
  <h1 class="text-2xl mb-6">Playlists</h1>
  <%= link_to 'New Playlist', new_playlist_path %>
</div>

<div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-100">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Name
        </th>
        <th scope="col" class="relative px-6 py-3">
          <span class="sr-only">Edit</span>
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @playlists.each do |playlist| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= playlist.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
            <%= link_to 'Show', playlist, class: "text-indigo-600 hover:text-indigo-900" %>
            <%= link_to 'Edit', playlist, class: "text-blue-600 hover:text-blue-900" %>
            <%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


