<div id="clearance" class="password-reset">
  <h2 class="text-2xl mb-10 text-center font-bold tracking-wide text-dark">
    <%= t(".title")  %>
  </h2>

  <%= form_for :password_reset,
        url: user_password_path(@user, token: @user.confirmation_token),
        html: { method: :put,  class: "bg-white p-15 rounded-xl shadow" } do |form| %>
    <p class="text-gray mb-8"><%= t(".description") %></p>

    <div class="password-field">
      <%= form.label :password %>
      <%= form.password_field :password, placeholder: "New password", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
    </div>

    <div class="mt-8">
      <%= form.submit class: "uppercase bg-orange font-medium text-white text-xs py-3 px-6 w-full tracking-widest rounded" %>
    </div>
  <% end %>
</div>
