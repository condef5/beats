<div style="width: 500px;">
  <h2 class="text-2xl mb-10 text-center font-bold tracking-wide text-dark">
    <%= t(".title") %>
  </h2>

  <%= form_for :password, url: passwords_path, html: { class: "bg-white p-15 rounded-xl shadow" } do |form| %>
    <p class="text-gray mb-8"><%= t(".description") %></p>

    <%= form.text_field :email, placeholder: "Email Address", type: 'email', class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>

    <div class="mt-8">
      <%= form.submit class: "uppercase bg-orange font-medium text-white text-xs py-3 px-6 w-full tracking-widest rounded" %>
    </div>

  <% end %>
</div>
