<%= form_for :session, url: session_path, html: { class: "bg-white p-15 rounded-xl shadow" } do |form| %>
  <div class="text-field">
    <%= form.label :email, "Email address",  class: "block text-gray font-medium text-sm mb-1" %>
    <%= form.text_field :email, type: 'email', class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="mt-8">
    <%= form.label :password, class: "block text-gray font-medium text-sm mb-1" %>
    <%= form.password_field :password, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="text-right mt-2 text-sm">
    <%= link_to t(".forgot_password"), new_password_path, class: "text-orange" %>
  </div>

  <div class="mt-8">
    <%= form.submit "Sign in", class: "uppercase bg-orange font-medium text-white text-xs py-3 px-6 w-full tracking-widest rounded" %>
  </div>

  <p class="mt-6 text-left text-sm text-gray">
    Don't have an account? <%= link_to "Register now", sign_up_path, class: "text-orange" %>
  </p>
<% end %>
