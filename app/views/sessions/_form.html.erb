<%= form_for :session, url: session_path do |form| %>
  <div class="text-field mt-8">
    <%= form.label :email, "Email address",  class: "block text-sm mb-1" %>
    <%= form.text_field :email, type: 'email', class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="password-field mt-8">
    <%= form.label :password, class: "block text-sm mb-1" %>
    <%= form.password_field :password, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
  </div>

  <div class="submit-field mt-8">
    <%= form.submit "Log in", class: "uppercase bg-blue-500 text-white text-xs py-3 px-6 w-full tracking-widest rounded" %>
  </div>

  <div class="flex justify-between mt-4">
    <%= link_to t(".sign_up"), sign_up_path, class: "hover:text-blue-500" %>
    <%= link_to t(".forgot_password"), new_password_path, class: "hover:text-blue-500" %>
  </div>
<% end %>
